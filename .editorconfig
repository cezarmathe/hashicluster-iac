# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[{Makefile,*.mk}]
indent_style = tab

[Vagrantfile]
indent_size = 2

[*.{tf,pkr.hcl,scss,hcl,nomad,tfvars}]
indent_size = 2
